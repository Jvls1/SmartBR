<body>
    <nav id="navbar">
        <h1><a id="logo" href="/empresas">smart<span>br</span></a></h1>
        <a class="btn-out" href="/logout">Sair</a>
    </nav>
    <div class="container">
        <h2 class="title-alt">Criar Usuário</h1>
        <form class="form-user" method="POST" action="/users/create">
            <label for="name">Nome</label>
            <input required id="name" type="text" name="name" placeholder="Nome"><br>
            <label for="email">Email</label>
            <input required id="email" type="email" name="email" placeholder="Email"><br>
            <label for="password">Senha</label>
            <input required id="password" type="password" name="password" placeholder="Senha"><br>
            <button class="btn" type="submit">Criar</button>
        </form>
    </div>
</body>
